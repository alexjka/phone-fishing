<div class="row">
  <div class="small-12 large-6 small-centered">
    <div class="row">
      <h1 class="index_header">What did you catch at <%= @spot.name %>?</h1>
        <ul style="list-style: none">
        </ul>
    </div>

    <div id="app">
    </div>
  </div>
</div>
<div class="row">
  <div class="small-12 large-8 small-centered">
    <div class="devise-new">
      <div class="spot-form">
        <%= form_for [ @spot, @report ] do |f| %>

          <div class="field">
            <%= f.label :body, 'Your fishing report' %>  <br />
            <%= f.text_field :body %>
          </div>

          <button class="button" type="submit">Add a report</button>
        <% end %>
      </div>
    </div>
  </div>
</div>
